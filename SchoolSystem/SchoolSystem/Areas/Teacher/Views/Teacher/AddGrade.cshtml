@using SchoolSystem.Core.Models.Grade
@model AddGradeViewModel;
@{
    ViewData["Title"] = "Add Grade";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="mb-3">
                <label asp-for="@Model.Number" class="form-label">Number</label>
                <select asp-for="@Model.Number" class="form-control">
                    @for (var i = 2; i < 7; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="@Model.Number" class="text-danger"></span>
                 </div>
                 <div class="mb-3">
                <label asp-for="@Model.SubjectId" class="form-label">Subject</label>
                <select asp-for="@Model.SubjectId" class="form-control">
                    @foreach (var s in Model.Subjects)
                    {
                        <option value="@s.Id">@s.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.Subjects" class="text-danger"></span>
                 </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </section>
    </div>
</div>