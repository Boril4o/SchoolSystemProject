@using SchoolSystem.Core.Models.Student
@model StudenUserNameViewMode;
@{
    ViewData["Title"] = "Enter Student Username";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="get">
                <hr />
                 <div class="mb-3">
                    <label asp-for="@Model.UserName" class="form-label">UserName</label>
                    <input asp-for="@Model.UserName" class="form-control" autocomplete="UserName" aria-required="true" />
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <a asp-area="Student" asp-controller="Student" asp-action="ShowStats" class="btn btn-primary btn-lg">See Grades and Notes</a>
                </div>
            </form>
        </section>
    </div>
</div>
