@using SchoolSystem.Core.Models.Teacher
@model EditTeacherViewModel;
@{
    ViewData["Title"] = "Edit teacher";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.UserName" class="form-label">Username</label>
                    <input asp-for="@Model.UserName" class="form-control" autocomplete="UserName" aria-required="true" />
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.FirstName" class="form-label">First Name</label>
                    <input asp-for="@Model.FirstName" class="form-control" autocomplete="FirstName" aria-required="true" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                 <div class="text-center mb-3">
                    <label asp-for="@Model.LastName" class="form-label">Last Name</label>
                    <input asp-for="@Model.LastName" class="form-control" autocomplete="LastName" aria-required="true" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                <label asp-for="@Model.GroupId" class="form-label">Group</label>
                <select asp-for="@Model.GroupId" class="form-control">
                    @foreach (var s in Model.Groups)
                    {
                        <option value="@s.Id">@s.Number</option>
                    }
                </select>
                <span asp-validation-for="GroupId" class="text-danger"></span>
                 </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Salary" class="form-label"></label>
                    <input asp-for="@Model.Salary" class="form-control" autocomplete="Salary" aria-required="true" />
                    <span asp-validation-for="@Model.Salary" class="text-danger"></span>
                </div>

                 <div class="mb-3">
                <label asp-for="@Model.SubjectId" class="form-label">Subject</label>
                <select asp-for="@Model.SubjectId" class="form-control">
                    @foreach (var s in Model.Subjects)
                    {
                        <option value="@s.Id">@s.Name</option>
                    }
                </select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
                 </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>
        </section>
    </div>
</div>
