@using SchoolSystem.Core.Models.Subject
@model IEnumerable<SubjectViewModel>
@{
	ViewBag.Title = "All Subjects";
}
<h2 class="text-center">@ViewBag.Title</h2> <hr />
<table class="table table-striped">
	<thead>
		<tr> 
			<th><label>Name</label></th>
		</tr>
		</thead> 
		<tbody>
			@foreach (var s in Model)
			{ 
				<tr>
					<td><label>@s.Name</label></td>
					<td>		
						<a  asp-area="Admin" asp-controller="Admin" asp-action="EditSubject" class="btn btn-primary btn-lg" asp-route-Id="@s.Id">Edit</a>
						<a onclick="return confirm('Are you sure you want to delete subject:@s.Name')" asp-area="Admin" asp-controller="Admin" asp-action="DeleteSubject" type="submit"*@ class="btn btn-primary" asp-route-Id="@s.Id">Delete</a>
					</td>
				</tr>
			} 
		</tbody> 
</table>



