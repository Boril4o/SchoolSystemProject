@using SchoolSystem.Core.Models.Teacher
@model IEnumerable<TeacherViewModel>
@{
	ViewBag.Title = "All Teachers";
}
<h2 class="text-center">@ViewBag.Title</h2> <hr />
<table class="table table-striped">
	<thead>
		<tr> 
			<th><label>UserName</label></th>
			<th><label>First Name</label></th>
			<th><label>Last Name</label></th>
			<th><label>Group</label></th>
			<th><label>Subject</label></th>
			<th><label>Salary</label></th>
			<th><label>Edit/Delete</label></th>
		</tr>
		</thead> 
		<tbody>
			@foreach (var t in Model)
			{ 
				<tr>
					<td><label>@t.UserName</label></td>
					<td><label>@t.FirstName</label></td> 
					<td><label>@t.LastName</label></td>
					<td><label>@t.Group</label></td> 
					<td><label>@t.Subject</label></td> 
					<td><label>@t.Salary</label></td> 
					<td>
						<a  asp-area="Admin" asp-controller="Admin" asp-action="EditTeacher" class="btn btn-primary btn-lg" asp-route-Id="@t.Id">Edit</a>
						<a onclick="return confirm('Are you sure you want to delete teacher:@t.FirstName')" asp-area="Admin" asp-controller="Admin" asp-action="DeleteTeacher" type="submit"*@ class="btn btn-primary" asp-route-Id="@t.Id">Delete</a>
					</td>
				</tr>
			} 
		</tbody> 
</table>
