@using SchoolSystem.Core.Models.Group
@model AddGroupViewModel;
@{
    ViewData["Title"] = "Add group";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Number" class="form-label">Number</label>
                    <input asp-for="@Model.Number" class="form-control" autocomplete="Number" aria-required="true" />
                    <span asp-validation-for="@Model.Number" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.MaxPeople" class="form-label">Max People</label>
                    <input asp-for="@Model.MaxPeople" class="form-control" autocomplete="Group-Number" aria-required="true" />
                    <span asp-validation-for="@Model.MaxPeople" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </section>
    </div>
</div>
